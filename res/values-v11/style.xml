<resources>
    <style name="helpIcon">
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_centerVertical">true</item>
        <!--<item name="android:layout_marginRight">8dp</item>-->
    </style>
    <style name="helpText">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>
    <style name="text">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <declare-styleable name="Gallery1">
        <attr name="android:galleryItemBackground" />
    </declare-styleable>

    <style name="MyIndeterminateProgress" parent="@android:style/Widget.ProgressBar.Small">
      <item name="android:minWidth">16dip</item>
      <item name="android:maxWidth">16dip</item>
      <item name="android:minHeight">16dip</item>
      <item name="android:maxHeight">16dip</item>
    </style>


    <style name="MyActionBar" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:background">#446644</item>
        <item name="android:indeterminateProgressStyle">@style/MyIndeterminateProgress</item>
    </style>

    <style name="ZwitscherStyle" parent="android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarSplitStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabBarStyle">@style/MyActionBar</item>
    </style>

</resources>